{
  "name": "plugin-polkadot",
  "displayName": "plugin-polkadot",
  "description": "Plugin for Parity Substrate",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:rust",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "plugin-polkadot",
          "title": "Plugin Polkadot",
          "icon": "assets/dark/icon.svg"
        }
      ]
    },
    "views": {
      "plugin-polkadot": [
        {
          "id": "nodes",
          "name": "Nodes"
        },
        {
          "id": "accounts",
          "name": "Accounts"
        },
        {
          "id": "extrinsics",
          "name": "Extrinsics"
        },
        {
          "id": "states",
          "name": "Chain state"
        }
      ]
    },
    "commands": [
      {
        "command": "extrinsics.showWebview",
        "title": "Show webview"
      },
      {
        "command": "nodes.startNode",
        "title": "Start local node"
      },
      {
        "command": "nodes.stopNode",
        "title": "Stop local node"
      },
      {
        "command": "nodes.clearChainData",
        "title": "Clear chain data"
      },
      {
        "command": "nodes.addNode",
        "title": "Add node",
        "icon": "assets/dark/add.svg"
      },
      {
        "command": "nodes.removeNode",
        "title": "Remove...",
        "icon": "assets/dark/remove.svg"
      },
      {
        "command": "nodes.connectToNode",
        "title": "Connect..."
      },
      {
        "command": "nodes.refresh",
        "title": "Refresh"
      },
      {
        "command": "extrinsics.runExtrinsic",
        "title": "Execute...",
        "icon": "assets/dark/run.svg"
      },
      {
        "command": "accounts.addAccount",
        "title": "Add account",
        "icon": "assets/dark/add.svg"
      },
      {
        "command": "accounts.importAccount",
        "title": "Import account from file"
      },
      {
        "command": "accounts.removeAccount",
        "title": "Remove...",
        "icon": "assets/dark/remove.svg"
      },
      {
        "command": "accounts.renameAccount",
        "title": "Change name..."
      },
      {
        "command": "accounts.copyAddress",
        "title": "Copy address..."
      },
      {
        "command": "accounts.createAccount",
        "title": "Create account"
      },
      {
        "command": "accounts.exportAccount",
        "title": "Export account..."
      },
      {
        "command": "states.subscribe",
        "title": "Subscribe for data"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nodes.addNode",
          "when": "view == nodes",
          "group": "navigation"
        },
        {
          "command": "nodes.startNode",
          "when": "view == nodes",
          "group": "section-2"
        },
        {
          "command": "nodes.stopNode",
          "when": "view == nodes",
          "group": "section-2"
        },
        {
          "command": "nodes.clearChainData",
          "when": "view == nodes",
          "group": "section-2"
        },
        {
          "command": "accounts.addAccount",
          "when": "view == accounts",
          "group": "navigation"
        },
        {
          "command": "accounts.importAccount",
          "when": "view == accounts",
          "group": "section-1"
        },
        {
          "command": "accounts.createAccount",
          "when": "view == accounts",
          "group": "section-1"
        }
      ],
      "view/item/context": [
        {
          "command": "nodes.connectToNode",
          "when": "view == nodes && viewItem == node",
          "group": "section-1"
        },
        {
          "command": "nodes.removeNode",
          "when": "view == nodes && viewItem == node",
          "group": "section-1"
        },
        {
          "command": "extrinsics.runExtrinsic",
          "when": "view == extrinsics && viewItem == extrinsic",
          "group": "section-1"
        },
        {
          "command": "accounts.removeAccount",
          "when": "view == accounts && viewItem == account",
          "group": "section-1"
        },
        {
          "command": "accounts.exportAccount",
          "when": "view == accounts && viewItem == account",
          "group": "section-1"
        },
        {
          "command": "accounts.renameAccount",
          "when": "view == accounts && viewItem == account",
          "group": "section-1"
        },
        {
          "command": "accounts.copyAddress",
          "when": "view == accounts && viewItem == account",
          "group": "section-1"
        },
        {
          "command": "states.subscribe",
          "when": "view == states && viewItem == state",
          "group": "section-1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "npm-run-all compile:*",
    "compile:extension": "tsc -p ./",
    "compile:views": "webpack --mode development",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc --watch -p ./",
    "watch:views": "webpack --watch --mode development",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/vscode": "^1.37.0",
    "@types/copy-paste": "^1.1.30",
    "css-loader": "^3.2.0",
    "glob": "^7.1.4",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "react-scripts": "^3.1.1",
    "style-loader": "^1.0.0",
    "ts-import-plugin": "^1.6.1",
    "ts-loader": "^6.0.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vsce": "^1.66.0",
    "vscode-test": "^1.0.2",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  },
  "dependencies": {
    "@polkadot/api": "^0.90.1",
    "@polkadot/api-contract": "^0.90.1",
    "@polkadot/app-contracts": "^0.34.0-beta.141",
    "@polkadot/keyring": "^1.2.0-beta.1",
    "@polkadot/react-components": "^0.34.0-beta.141",
    "@polkadot/react-identicon": "^0.42.0-beta.35",
    "@polkadot/react-params": "^0.34.0-beta.141",
    "@polkadot/react-signer": "^0.34.0-beta.141",
    "@polkadot/types": "^0.90.1",
    "@polkadot/ui-keyring": "^0.42.0-beta.35",
    "@polkadot/ui-signer": "^0.34.0-beta.119",
    "await-to-js": "^2.1.1",
    "copy-paste": "^1.3.0",
    "module-alias": "^2.2.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "_moduleAliases": {
    "@": "out"
  },
  "extensionDependencies": [
    "rust-lang.rust"
  ]
}
